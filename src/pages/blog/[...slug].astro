---
import { getCollection, render, type CollectionEntry } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <!-- Animated Background -->
  <div class="bg-animation">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="grid-overlay"></div>
  </div>

  <!-- Navigation -->
  <nav class="nav">
    <a href="/" class="nav-logo">
      <span class="logo-text">Soul</span><span class="logo-accent">mad</span>
    </a>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/blog">Blog</a>
    </div>
  </nav>

  <main class="main">
    <article class="article">
      <!-- Article Header -->
      <header class="article-header">
        <a href="/blog" class="back-link">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M19 12H5M12 19l-7-7 7-7"></path>
          </svg>
          Back to Blog
        </a>

        <div class="article-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
          <span class="separator">&#8226;</span>
          <span class="author">by {post.data.author}</span>
        </div>

        <h1 class="article-title">{post.data.title}</h1>

        <p class="article-description">{post.data.description}</p>

        <div class="article-tags">
          {post.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
        </div>

        <div class="title-decoration">
          <span class="decoration-line"></span>
          <span class="decoration-dot"></span>
          <span class="decoration-line"></span>
        </div>
      </header>

      <!-- Article Content -->
      <div class="article-content prose">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="article-footer">
        <div class="share-section">
          <span class="share-label">Enjoyed this article?</span>
          <a href="/blog" class="cta-button">
            Read More Articles
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </footer>
    </article>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <p>Crafted with <span class="heart">&#9829;</span> using Astro</p>
  </footer>
</BaseLayout>

<style>
  /* CSS Variables - Red Blue Theme */
  :root {
    --red: #ef4444;
    --red-dark: #dc2626;
    --red-light: #fca5a5;
    --blue: #3b82f6;
    --blue-dark: #2563eb;
    --blue-light: #93c5fd;
    --purple: #8b5cf6;
    --dark: #0a0a0f;
    --dark-lighter: #12121a;
    --gray: #71717a;
    --gray-light: #a1a1aa;
    --white: #fafafa;
  }

  /* Background Animation */
  .bg-animation {
    position: fixed;
    inset: 0;
    z-index: -1;
    background: var(--dark);
    overflow: hidden;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.3;
    animation: float 25s ease-in-out infinite;
  }

  .orb-1 {
    width: 800px;
    height: 800px;
    background: var(--red);
    top: -300px;
    right: -300px;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 600px;
    height: 600px;
    background: var(--blue);
    bottom: -200px;
    left: -200px;
    animation-delay: -12s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.05);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.95);
    }
  }

  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 3rem;
    background: rgba(10, 10, 15, 0.9);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav-logo {
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
  }

  .logo-text {
    color: var(--white);
  }

  .logo-accent {
    background: linear-gradient(135deg, var(--red), var(--blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: var(--gray);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }

  .nav-links a:hover {
    color: var(--white);
  }

  /* Main */
  .main {
    padding-top: 100px;
    padding-bottom: 4rem;
    min-height: 100vh;
  }

  /* Article */
  .article {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Article Header */
  .article-header {
    text-align: center;
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray);
    text-decoration: none;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    transition:
      color 0.3s,
      gap 0.3s;
  }

  .back-link:hover {
    color: var(--white);
    gap: 0.75rem;
  }

  .back-link svg {
    width: 16px;
    height: 16px;
  }

  .article-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--gray);
    margin-bottom: 1.5rem;
  }

  .article-meta time {
    color: var(--blue-light);
  }

  .separator {
    color: var(--gray);
  }

  .article-title {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.2;
    color: var(--white);
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--white), var(--gray-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .article-description {
    font-size: 1.25rem;
    color: var(--gray);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .article-tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 3rem;
  }

  .tag {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    font-size: 0.75rem;
    color: var(--gray);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s;
  }

  .tag:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.3);
    color: var(--blue-light);
  }

  .title-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .decoration-line {
    width: 60px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--gray), transparent);
  }

  .decoration-dot {
    width: 8px;
    height: 8px;
    background: linear-gradient(135deg, var(--red), var(--blue));
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
    }
  }

  /* Article Content - Prose Styling */
  .article-content {
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  .article-content :global(h1),
  .article-content :global(h2),
  .article-content :global(h3),
  .article-content :global(h4) {
    color: var(--white);
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .article-content :global(h1) {
    font-size: 2.5rem;
  }
  .article-content :global(h2) {
    font-size: 2rem;
  }
  .article-content :global(h3) {
    font-size: 1.5rem;
  }
  .article-content :global(h4) {
    font-size: 1.25rem;
  }

  .article-content :global(p) {
    color: var(--gray-light);
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .article-content :global(strong) {
    color: var(--white);
    font-weight: 600;
  }

  .article-content :global(a) {
    color: var(--blue-light);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s;
  }

  .article-content :global(a:hover) {
    border-bottom-color: var(--blue-light);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    color: var(--gray-light);
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .article-content :global(blockquote) {
    border-left: 3px solid var(--blue);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--gray);
  }

  .article-content :global(code) {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--red-light);
    font-family: 'Fira Code', 'Monaco', monospace;
  }

  .article-content :global(pre) {
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
    position: relative;
  }

  .article-content :global(pre code) {
    background: none;
    padding: 0;
    color: var(--gray-light);
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .article-content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--gray), transparent);
    margin: 3rem 0;
  }

  /* Article Footer */
  .article-footer {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
  }

  .share-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .share-label {
    color: var(--gray);
    font-size: 1.125rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--red), var(--blue));
    color: var(--white);
    font-weight: 600;
    text-decoration: none;
    border-radius: 100px;
    transition:
      transform 0.3s,
      box-shadow 0.3s,
      gap 0.3s;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(239, 68, 68, 0.3);
    gap: 1rem;
  }

  .cta-button svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Footer */
  .footer {
    padding: 3rem;
    text-align: center;
    color: var(--gray);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .heart {
    color: var(--red);
    animation: heartbeat 1s ease-in-out infinite;
  }

  @keyframes heartbeat {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav {
      padding: 1rem 1.5rem;
    }

    .article {
      padding: 0 1.5rem;
    }

    .article-title {
      font-size: 2rem;
    }

    .article-description {
      font-size: 1.125rem;
    }

    .article-content :global(h1) {
      font-size: 1.75rem;
    }
    .article-content :global(h2) {
      font-size: 1.5rem;
    }
    .article-content :global(h3) {
      font-size: 1.25rem;
    }

    .article-content :global(p) {
      font-size: 1rem;
    }

    .article-content :global(pre) {
      padding: 1rem;
      border-radius: 8px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
