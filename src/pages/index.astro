<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  import { ScrollToPlugin } from 'gsap/ScrollToPlugin';

  gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);

  // Hero animations
  const heroTimeline = gsap.timeline({ defaults: { ease: 'power3.out' } });

  heroTimeline
    .to('.hero__badge', {
      opacity: 1,
      duration: 0.6,
      delay: 0.3,
    })
    .to(
      '.hero__title-line',
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        stagger: 0.15,
      },
      '-=0.3'
    )
    .to(
      '.hero__subtitle',
      {
        opacity: 1,
        y: 0,
        duration: 0.6,
      },
      '-=0.4'
    )
    .to(
      '.hero__cta',
      {
        opacity: 1,
        y: 0,
        duration: 0.6,
      },
      '-=0.3'
    )
    .to(
      '.hero__scroll',
      {
        opacity: 1,
        duration: 0.6,
      },
      '-=0.2'
    );

  // Floating dice animation
  gsap.to('.hero__dice-item--1', {
    y: -20,
    rotation: 10,
    duration: 3,
    repeat: -1,
    yoyo: true,
    ease: 'sine.inOut',
  });

  gsap.to('.hero__dice-item--2', {
    y: -15,
    rotation: -8,
    duration: 2.5,
    repeat: -1,
    yoyo: true,
    ease: 'sine.inOut',
    delay: 0.5,
  });

  gsap.to('.hero__dice-item--3', {
    y: -10,
    rotation: 5,
    duration: 2,
    repeat: -1,
    yoyo: true,
    ease: 'sine.inOut',
    delay: 1,
  });

  // Stats counter animation
  const statsNumbers = document.querySelectorAll('.stats__number');
  statsNumbers.forEach((stat) => {
    const target = parseInt(stat.getAttribute('data-count') || '0', 10);

    ScrollTrigger.create({
      trigger: stat,
      start: 'top 80%',
      onEnter: () => {
        gsap.to(stat, {
          innerText: target,
          duration: 2,
          snap: { innerText: 1 },
          ease: 'power2.out',
          onUpdate: function () {
            stat.textContent = Math.round(
              parseFloat(stat.textContent || '0')
            ).toLocaleString();
          },
        });
      },
      once: true,
    });
  });

  // Section animations
  const sections = document.querySelectorAll(
    '.about, .shops, .gallery, .games, .pricing, .testimonials, .social, .contact'
  );

  sections.forEach((section) => {
    const sectionTag = section.querySelector('.section-tag');
    const title = section.querySelector('h2');
    const subtitle = section.querySelector('p');

    if (sectionTag || title) {
      gsap.from([sectionTag, title, subtitle].filter(Boolean), {
        scrollTrigger: {
          trigger: section,
          start: 'top 70%',
        },
        y: 40,
        opacity: 0,
        duration: 0.8,
        stagger: 0.15,
        ease: 'power3.out',
      });
    }
  });

  // Shop cards animation
  gsap.from('.shop-card', {
    scrollTrigger: {
      trigger: '.shops__grid',
      start: 'top 70%',
    },
    y: 60,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power3.out',
  });

  // Game cards animation
  gsap.from('.game-card', {
    scrollTrigger: {
      trigger: '.games__grid',
      start: 'top 70%',
    },
    y: 40,
    opacity: 0,
    duration: 0.6,
    stagger: 0.1,
    ease: 'power3.out',
  });

  // Pricing cards animation
  gsap.from('.pricing-card', {
    scrollTrigger: {
      trigger: '.pricing__grid',
      start: 'top 70%',
    },
    y: 60,
    opacity: 0,
    duration: 0.8,
    stagger: 0.15,
    ease: 'power3.out',
  });

  // Testimonial cards animation
  gsap.from('.testimonial-card', {
    scrollTrigger: {
      trigger: '.testimonials__grid',
      start: 'top 70%',
    },
    y: 40,
    opacity: 0,
    duration: 0.8,
    stagger: 0.15,
    ease: 'power3.out',
  });

  // About section image stack animation
  gsap.from('.about__image', {
    scrollTrigger: {
      trigger: '.about__visual',
      start: 'top 70%',
    },
    scale: 0.8,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'back.out(1.5)',
  });

  gsap.from('.about__badge', {
    scrollTrigger: {
      trigger: '.about__visual',
      start: 'top 60%',
    },
    scale: 0,
    opacity: 0,
    duration: 0.6,
    delay: 0.6,
    ease: 'back.out(2)',
  });

  // Navigation scroll effect
  let lastScroll = 0;
  const nav = document.querySelector<HTMLElement>('.nav');

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;

    if (nav) {
      if (currentScroll > 100) {
        nav.classList.add('nav--scrolled');
      } else {
        nav.classList.remove('nav--scrolled');
      }

      if (currentScroll > lastScroll && currentScroll > 200) {
        nav.classList.add('nav--hidden');
      } else {
        nav.classList.remove('nav--hidden');
      }
    }

    lastScroll = currentScroll;
  });

  // Mobile menu toggle
  const menuToggle = document.querySelector<HTMLElement>('.nav__toggle');
  const menu = document.querySelector<HTMLElement>('.nav__menu');

  menuToggle?.addEventListener('click', () => {
    const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
    menuToggle.setAttribute('aria-expanded', String(!isExpanded));
    menu?.classList.toggle('nav__menu--open');
    menuToggle.classList.toggle('nav__toggle--active');
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && menu?.classList.contains('nav__menu--open')) {
      menu.classList.remove('nav__menu--open');
      menuToggle?.classList.remove('nav__toggle--active');
      menuToggle?.setAttribute('aria-expanded', 'false');
    }
  });

  // Games category filter
  const categoryButtons = document.querySelectorAll('.games__category');
  const gameCards = document.querySelectorAll('.game-card');

  categoryButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');

      categoryButtons.forEach((btn) =>
        btn.classList.remove('games__category--active')
      );
      button.classList.add('games__category--active');

      gameCards.forEach((card) => {
        const cardCategory = card.getAttribute('data-category');

        if (category === 'all' || cardCategory === category) {
          gsap.to(card, {
            opacity: 1,
            scale: 1,
            duration: 0.4,
            ease: 'power2.out',
          });
          (card as HTMLElement).style.display = 'block';
        } else {
          gsap.to(card, {
            opacity: 0,
            scale: 0.95,
            duration: 0.3,
            ease: 'power2.out',
            onComplete: () => {
              (card as HTMLElement).style.display = 'none';
            },
          });
        }
      });
    });
  });

  // Smooth scroll for anchor links
  document
    .querySelectorAll<HTMLAnchorElement>('a[href^="#"]')
    .forEach((anchor) => {
      anchor.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const href = anchor.getAttribute('href');
        if (href) {
          const targetEl = document.querySelector(href);
          if (targetEl) {
            gsap.to(window, {
              duration: 1,
              scrollTo: { y: targetEl, offsetY: 80 },
              ease: 'power3.inOut',
            });
          }
        }

        // Close mobile menu if open
        menu?.classList.remove('nav__menu--open');
        menuToggle?.classList.remove('nav__toggle--active');
        menuToggle?.setAttribute('aria-expanded', 'false');
      });
    });
</script>
