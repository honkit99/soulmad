<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // ===================================
    // 1. HERO PARALLAX (Mouse Movement)
    // ===================================
    const heroSection = document.getElementById('hero');
    if (heroSection && window.innerWidth >= 768) {
      heroSection.addEventListener('mousemove', (e) => {
        const x = e.clientX - window.innerWidth / 2;
        const y = e.clientY - window.innerHeight / 2;

        document.querySelectorAll('.parallax-layer').forEach((layer) => {
          const speed = parseFloat(layer.getAttribute('data-speed') || '0');
          gsap.to(layer, {
            x: x * speed,
            y: y * speed,
            duration: 1,
            ease: 'power2.out',
          });
        });
      });
    }

    // ===================================
    // 2. OUR STORY (Horizontal Scroll)
    // ===================================
    const track = document.getElementById('story-track');
    const wrapper = document.getElementById('story-wrapper');

    if (track && wrapper) {
      const sections = gsap.utils.toArray('#story-track > div');

      gsap.to(sections, {
        xPercent: -100 * (sections.length - 1),
        ease: 'none',
        scrollTrigger: {
          trigger: wrapper,
          pin: true,
          scrub: 1,
          snap: 1 / (sections.length - 1),
          end: () => '+=' + track.offsetWidth,
        },
      });
    }

    // ===================================
    // 3. EXPERIENCE (Floating Gallery)
    // ===================================
    if (window.innerWidth >= 768) {
      gsap.utils.toArray('.experience-col').forEach((col) => {
        const speed = parseFloat(
          (col as HTMLElement).getAttribute('data-speed') || '1'
        );
        gsap.to(col, {
          y: -100 * speed,
          scrollTrigger: {
            trigger: '#experience',
            start: 'top bottom',
            end: 'bottom top',
            scrub: 1,
          },
        });
      });
    }

    // ===================================
    // 4. GAME FILTERING
    // ===================================
    const filterButtons = document.querySelectorAll('.filter-btn');
    const gameItems = document.querySelectorAll('.game-item');

    filterButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');

        // Update active state
        filterButtons.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter items
        if (filter === 'all') {
          gameItems.forEach((item) => {
            gsap.to(item, { opacity: 1, scale: 1, duration: 0.3 });
            item.classList.remove('hidden');
          });
        } else {
          gameItems.forEach((item) => {
            if (item.classList.contains(filter as string)) {
              gsap.to(item, { opacity: 1, scale: 1, duration: 0.3 });
              item.classList.remove('hidden');
            } else {
              gsap.to(item, {
                opacity: 0,
                scale: 0.8,
                duration: 0.3,
                onComplete: () => item.classList.add('hidden'),
              });
            }
          });
        }
      });
    });

    // ===================================
    // 5. RUNNING PET (Supah Style Skew)
    // ===================================
    const petContainer = document.getElementById('running-pet-container');
    const petSvg = document.getElementById('pet-svg');

    if (petContainer && petSvg) {
      // Initial fade in after hero
      ScrollTrigger.create({
        trigger: '#story-wrapper',
        start: 'top center',
        onEnter: () => gsap.to(petContainer, { opacity: 1, duration: 0.5 }),
        onLeaveBack: () => gsap.to(petContainer, { opacity: 0, duration: 0.5 }),
      });

      // Skew/Stretch effect based on velocity
      const proxy = { skew: 0 };
      const skewSetter = gsap.quickSetter(petSvg, 'skewY', 'deg');
      const scaleSetter = gsap.quickSetter(petSvg, 'scaleY');
      const clamp = gsap.utils.clamp(-20, 20);

      ScrollTrigger.create({
        onUpdate: (self) => {
          const velocity = self.getVelocity();
          const skew = clamp(velocity / -100);

          if (Math.abs(skew) > Math.abs(proxy.skew)) {
            proxy.skew = skew;
            gsap.to(proxy, {
              skew: 0,
              duration: 0.5,
              ease: 'power3.out',
              overwrite: true,
              onUpdate: () => {
                skewSetter(proxy.skew);
                const s = 1 + Math.abs(proxy.skew) / 50;
                scaleSetter(s);
              },
            });
          }
        },
      });
    }
  });
</script>
